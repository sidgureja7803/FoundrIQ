# Server Configuration
PORT=5000
NODE_ENV=development

# IBM Granite (Watson) - Required for AI Analysis
IBM_WATSONX_API_KEY=your_ibm_api_key_here
IBM_WATSONX_URL=https://us-south.ml.cloud.ibm.com
IBM_WATSONX_PROJECT_ID=your_project_id_here
GRANITE_MODEL_ID=ibm/granite-13b-instruct-v2

# API Keys - Required for Market Research
TAVILY_API_KEY=your_tavily_api_key_here

# API Keys - Optional
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Feature Flags
ENABLE_TAVILY=true

# Research Configuration
RESEARCH_CACHE_TTL=259200
RESEARCH_MAX_DOCUMENTS=20
RESEARCH_FETCH_TIMEOUT=30000

# Rate Limits (requests per minute)
TAVILY_RATE_LIMIT=10
PERPLEXITY_RATE_LIMIT=10
FETCH_RATE_LIMIT=20

# Processing Configuration
LEGACY_PROCESSING=false

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Appwrite Configuration (Required for Database)
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id
APPWRITE_API_KEY=your_api_key
APPWRITE_DATABASE_ID=your_database_id
APPWRITE_IDEAS_COLLECTION_ID=ideas

